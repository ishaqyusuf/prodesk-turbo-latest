  "devDependencies": {
    "@gnd/eslint-config": "workspace:*",
    "@gnd/prettier-config": "workspace:*",
    "@gnd/tailwind-config": "workspace:*",
    "@gnd/tsconfig": "workspace:*",
    "@types/react": "18.3.1",
  "eslint": "^9.7.0",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "tailwindcss": "^3.4.4",
     "typescript": "^5.5.3",
    "zod": "3.23.8"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "zod": "3.23.8"
  },
  "prettier": "@gnd/prettier-config"
}
