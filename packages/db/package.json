{
  "name": "@gnd/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "prisma": {
    "schema": "./src/schema"
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "pnpm with-env prisma generate",
    "push": "pnpm with-env prisma db push",
    "pull": "pnpm with-env prisma db pull",
    "studio": "pnpm with-env prisma studio --port 5556",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@prisma/extension-accelerate": "^1.2.1",
    "@t3-oss/env-core": "^0.11.1",
    "kysely": "^0.27.5",
    "prisma-kysely": "^1.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@gnd/eslint-config": "workspace:*",
    "@gnd/prettier-config": "workspace:*",
    "@gnd/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.7.0",
    "prettier": "^3.3.3",
    "prisma": "^6.1.0",
    "typescript": "^5.5.3"
  },
  "prettier": "@gnd/prettier-config"
}
